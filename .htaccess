# Enable rewriting
RewriteEngine On

# Show PHP errors (for development, disable in production after fixing issues)
php_flag display_errors on
php_value error_reporting E_ALL

# Set custom error log
php_value error_log logs/php_error.log

# Handle custom error pages
ErrorDocument 500 /error/500.php
ErrorDocument 404 /error/404.php

# Set default charset
AddDefaultCharset UTF-8

# Set timezone (sesuaikan dengan timezone server Anda)
php_value date.timezone Asia/Jakarta

# Protect the .env file
<Files .env>
    Order allow,deny
    Deny from all
</Files>

# Protect .htaccess file
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Allow direct access to specific directories
<IfModule mod_rewrite.c>
    RewriteRule ^(assets|error)($|/) - [L]
</IfModule>

# Improve security
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
</IfModule> 